# Environment Configuration for SRWA Platform
# Copy this file to .env and update the values
# ------------------------

# Solana Network Configuration
# Options: 'devnet' | 'testnet' | 'mainnet-beta'
# Use 'devnet' for development, 'mainnet-beta' for production
VITE_SOLANA_NETWORK=devnet

# Solana RPC URLs
# Primary RPC endpoint
VITE_SOLANA_RPC_URL_DEVNET=https://api.devnet.solana.com
VITE_SOLANA_RPC_URL_TESTNET=https://api.testnet.solana.com
VITE_SOLANA_RPC_URL_MAINNET=https://api.mainnet-beta.solana.com

# Backup RPC endpoints (optional, for failover)
VITE_SOLANA_RPC_URL_BACKUP_DEVNET=https://rpc.ankr.com/solana_devnet
VITE_SOLANA_RPC_URL_BACKUP_MAINNET=https://rpc.ankr.com/solana

# Application Configuration
VITE_APP_NAME=SRWA Platform
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Solana Real-World Asset Platform

# API Configuration (optional)
VITE_API_BASE_URL=http://localhost:3000
VITE_API_TIMEOUT=30000

# Feature Flags (optional)
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_MAINNET=false