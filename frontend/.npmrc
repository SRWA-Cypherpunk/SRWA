# SRWA Frontend - NPM Configuration
# Ensures optional dependencies are properly installed in CI/CD

# Enforce engine requirements (ensures npm is used, not yarn)
engine-strict=true

# Ensure optional dependencies are installed (fixes Rollup Linux binaries on Linux/Cloudflare)
optional=true

# Don't display funding messages during builds
fund=false

# Allow legacy peer dependencies (fixes Anchor 0.32.1 conflict with @orca-so/whirlpools-sdk@0.16.0)
legacy-peer-deps=true
